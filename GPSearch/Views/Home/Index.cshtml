@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron jumbotron-fluid">
    <div class="text-center">
        <img src="~/img/logo_branco.png" class="rounded" alt="">
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="row">
                <input placeholder="Entre com CNPJ" class="col-12 form-control" type="text" id="pesquisaCnpj" />
            </div>
